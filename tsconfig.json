{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "./types",
        "outDir": "./js",
        "rootDir": "./src",
        "paths": {
            "3h-utils": [
                "./node_modules/3h-utils/index.d.ts"
            ],
            "3h-event": [
                "./node_modules/3h-event/index.d.ts"
            ]
        },
        "strict": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
